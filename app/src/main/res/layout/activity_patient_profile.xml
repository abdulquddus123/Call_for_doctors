<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#333333"
        android:weightSum="1">


        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            style="@style/Widget.MyApp.Toolbar.Solid"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarColoredBackArrow"
            app:titleTextColor="@color/white" />

        <ImageView
            android:id="@+id/pProfileUserImage"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="250dp"
            android:src="@drawable/user_img"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_weight="0.17" />

        <TextView
            android:id="@+id/pProfileUserName"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="Display Name" />

        <TextView
            android:id="@+id/pProfileUserStatus"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Your current Status"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />


        <Button
            android:id="@+id/call_now"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#29abb7"
            android:text="Call Now"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/pProfileUserFriends"
            android:layout_width="match_parent"
            android:layout_marginTop="90dp"
            android:layout_height="25dp"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Total Friends" />

        <Button
            android:id="@+id/pProfileSendReqButton"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark"
            android:text="Send Friend Request"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/pProfileDeclineReqButton"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark"
            android:text="Decline Friend Request"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</RelativeLayout>